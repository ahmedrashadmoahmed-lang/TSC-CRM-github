                          <i className="bi bi-activity text-xs"></i>
                        </div>
                      </div>
                      <div className="flex-1 min-w-0">
                        <p className="text-sm font-medium truncate">{activity.description}</p>
                        <p className="text-xs opacity-60">
                          {new Date(activity.timestamp).toLocaleString('ar-EG', {
                            month: 'short',
                            day: 'numeric',
                            hour: '2-digit',
                            minute: '2-digit',
                          })}
                        </p>
                      </div>
                      {activity.amount && (
                        <div className="text-xs font-bold text-green-500 whitespace-nowrap">
                          {activity.amount.toLocaleString('ar-EG')} ج.م
                        </div>
                      )}
                    </div>
                  ))
                ) : (
                  <div className="text-center py-8 opacity-60">
                    <i className="bi bi-inbox text-4xl mb-2 block"></i>
                    <p>لا يوجد نشاط</p>
                  </div>
                )}
              </div>
            </div>
          </div>
        </div>

        {/* Quick Actions Button */}
        <button
          onClick={() => setShowQuickActions(!showQuickActions)}
          className="btn btn-primary btn-circle btn-lg fixed bottom-6 left-6 shadow-2xl z-50"
          title="إجراءات سريعة"
        >
          <i className="bi bi-plus-lg text-2xl"></i>
        </button>

        {/* Quick Actions Menu */}
        {showQuickActions && (
          <div className="fixed bottom-24 left-6 z-50">
            <div className="card bg-white dark:bg-gray-800 shadow-2xl w-64">
              <div className="card-body p-4">
                <h4 className="font-bold mb-3">إجراءات سريعة</h4>
                <div className="space-y-2">
                  <button className="btn btn-sm w-full justify-start">
                    <i className="bi bi-person-plus ml-2"></i>
                    إضافة عميل جديد
                  </button>
                  <button className="btn btn-sm w-full justify-start">
                    <i className="bi bi-file-earmark-plus ml-2"></i>
                    إنشاء RFQ
                  </button>
                  <button className="btn btn-sm w-full justify-start">
                    <i className="bi bi-receipt ml-2"></i>
                    إنشاء فاتورة
                  </button>
                  <button className="btn btn-sm w-full justify-start">
                    <i className="bi bi-cart-plus ml-2"></i>
                    إنشاء أمر شراء
                  </button>
                </div>
              </div>
            </div>
          </div>
        )}

        {/* Keyboard Shortcuts Help */}
        <div className="card bg-gray-50 dark:bg-gray-800/50 shadow">
          <div className="card-body p-4">
            <div className="flex items-center justify-center gap-4 text-sm opacity-60">
              <div className="flex items-center gap-2">
                <kbd className="kbd kbd-sm">Ctrl</kbd>+<kbd className="kbd kbd-sm">K</kbd>
                <span>بحث</span>
              </div>
              <div className="flex items-center gap-2">
                <kbd className="kbd kbd-sm">Ctrl</kbd>+<kbd className="kbd kbd-sm">R</kbd>
                <span>تحديث</span>
              </div>
            </div>
          </div>
        </div>
      </div>
    </MainLayoutNew>
  );
}
