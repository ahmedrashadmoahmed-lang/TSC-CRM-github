# Database Configuration
DATABASE_URL="postgresql://postgres:your_password@localhost:5432/erp_database?schema=public"

# NextAuth Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-super-secret-key-change-this-in-production-minimum-32-characters-long"

# Google Gemini AI
GOOGLE_GEMINI_API_KEY="your-google-gemini-api-key-here"

# Node Environment
NODE_ENV="development"

# Logging
LOG_LEVEL="info"

# ============================================
# ADVANCED INTEGRATIONS
# ============================================

# Egyptian E-Invoice (مصلحة الضرائب المصرية)
EINVOICE_BASE_URL="https://api.invoicing.eta.gov.eg"
EINVOICE_ENV="sandbox"  # sandbox or production
EINVOICE_CLIENT_ID="your-eta-client-id"
EINVOICE_CLIENT_SECRET="your-eta-client-secret"
EINVOICE_TAX_NUMBER="your-company-tax-number"
EINVOICE_BRANCH_ID="your-branch-id"

# WhatsApp Integration (Twilio)
TWILIO_ACCOUNT_SID="your-twilio-account-sid"
TWILIO_AUTH_TOKEN="your-twilio-auth-token"
TWILIO_WHATSAPP_NUMBER="+14155238886"  # Twilio sandbox or your WhatsApp number

# Email Configuration (SMTP)
SMTP_HOST="smtp.gmail.com"
SMTP_PORT="465"
SMTP_USER="your-email@gmail.com"
SMTP_PASSWORD="your-gmail-app-password"
SMTP_FROM="your-email@gmail.com"
COMPANY_NAME="Your Company Name"

# Redis (Optional - for caching)
REDIS_URL="redis://localhost:6379"

# ============================================
# OPTIONAL SERVICES
# ============================================

# SendGrid (Alternative to SMTP)
# SENDGRID_API_KEY="your-sendgrid-api-key"

# AWS S3 (For file storage)
# AWS_ACCESS_KEY_ID="your-aws-access-key"
# AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
# AWS_REGION="us-east-1"
# AWS_S3_BUCKET="your-bucket-name"

# Sentry (Error monitoring)
# SENTRY_DSN="your-sentry-dsn"

# ============================================
# NOTES
# ============================================

# 1. Never commit this file with real credentials
# 2. Copy this file to .env and fill in your actual values
# 3. For production, use strong passwords and secrets
# 4. Keep your API keys secure
# 5. Use environment-specific values for different environments
